<section class="user_container">

  <div class="user_form">

    <h2>新しいアカウントを作成</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="user_field">
        <%= f.label :name, "ユーザー名" %><br />
        <%= f.text_field :name, autofocus: true%>
      </div>

      <div class="user_field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="user_field">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上の入力が必要です)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="user_field">
        <%= f.label :password_confirmation, "パスワードをもう一度入力してください" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="user_field">
        <%= f.label :image, "アイコン画像" %><br />
        <%= f.file_field :image %>
      </div>

      <div class="actions">
        <%= f.submit "新しいアカウントを作成", class: 'user_submit_btn' %>
      </div>

      <div class="to_log_in"><%= link_to "既にアカウントをお持ちの方はこちら", :user_session %></div>
    <% end %>
  </div>
</section>
