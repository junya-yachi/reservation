<h1>予約済みルーム一覧</h1>

<table>
  <thead>
    <tr>
      <th>ルーム画像</th>
      <th>ルーム名</th>
      <th>ルーム紹介</th>
      <th>合計料金</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>予約確定日時</th>
    </tr>
  </thead>

  <tbody>
    <% @reserves.each do |reserve| %>
      <tr>
        <td><%= reserve.image %></td>
        <td><%= link_to "#{reserve.name}", reserve %></td>
        <td><%= reserve.introduction %></td>
        <td><%= reserve.rent %></td>
      </tr>
    <% end %>

    <% @reserves.each do |reserve| %>
      <tr>
        <td><%= reserve.start_day %></td>
        <td><%= reserve.end_day %></td>
        <td><%= reserve.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
