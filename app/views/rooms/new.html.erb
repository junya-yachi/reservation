<h1>ルーム情報登録</h1>
<%= form_with model: @room do |f| %>
  <table class="registration_room">
    <tr>
      <th><%= f.label :name, "ルーム名" %></th>
      <td><%= f.text_field :name, placeholder: "ルーム名を入力" %></td>
    </tr>

    <tr>
      <th><%= f.label :introduction, "ルーム紹介" %></th>
      <td><%= f.text_field :introduction, placeholder: "ルーム説明を入力" %></td>
    </tr>

    <tr>
      <th><%= f.label :rent, "料金" %></th>
      <td><%= f.text_field :rent, placeholder: "1日あたりの料金を入力" %></td>
    </tr>

    <tr>
      <th><%= f.label :adress, "住所" %></th>
      <td><%= f.text_field :adress, placeholder: "住所を入力" %></td>
    </tr>

    <tr>
      <th><%= f.label :image, "ルーム画像" %></th>
      <td><%= f.submit "ファイルを選択" %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "登録" %></li>
      <li><%= link_to "Topページへ", :mains %></li>
    </ul>
  </div>
<% end %>