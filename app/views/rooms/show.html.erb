<div class="room_reserve_container">

  <div class="room_show_container">
    <div class="room_show_box">
      <div class="room_title">
        ルーム名 : <%= @room.name %>
      </div>
      <div>
        <% if @room.image? %>
          <%= image_tag @room.image.to_s, class: 'room_img' %>
        <% else %>
          <%= image_tag("room01.jpg", class: 'room_img') %>
        <% end %>
      </div>
      <div class="room_detail">
        <div>
          <% if @room.user.image.nil? %>
            <%= image_tag("人物のアイコン素材 その3.png", class: 'room_show_img') %>
          <% else %>
            <%= image_tag(@users.image.to_s, class: 'room_show_img') %>
          <% end %>
        </div>
        <div>
          <div class="room_address">
            貸主 : <%= @room.user.name %>さん
          </div>
          <div class="room_address">
            貸部屋住所 : <%= @room.adress %>
          </div>
        </div>
      </div>
      <div class="room_introduction">
        <p>ルーム説明 : </p>
        <%= @room.introduction %>
      </div>
    </div>

    <div class="room_show_reserver">
      <p>ルーム予約</p>
      <div class="reserve_form">
        <%= form_with scope: :reserve, url: new_reserf_path, method: :get do |f| %>
          <table>
            <tr>
              <td>
                <p class="rent">宿泊料金</p>
                <div>¥ <%= @room.rent.to_s(:delimited) %> / 日</div>
              </td>
            </tr>
            <tr>
              <td>
                <p class="label_p">開始日</p>
                <%= f.date_field :start_day, class: 'days_field' %>
              </td>
            </tr>
            <tr>
              <td>
                <p class="label_p">終了日</p>
                <%= f.date_field :end_day, class: 'days_field' %>
              </td>
            </tr>
            <tr>
              <td>
                <p class="label_p">人数</p>
                <%= f.number_field :num_people %>
              </td>
            </tr>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :room_id, value: @room.id %>
            <tr>
                <td><div><%= f.submit "予約する", class: 'room_submit_btn' %></div></td>
            </tr>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>
