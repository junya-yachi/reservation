<div class="room_reserve_container">
  <h2>ルーム詳細</h2>

  <div class="room_show_container">
    <div>
      <table>
        <tr>
          <td><%= image_tag @room.image.to_s, class: 'room_img' %></td>
        </tr>
        <tr>
          <td><%= @room.name %></td>
        </tr>
        <tr>
          <td><%= @room.adress %></td>
        </tr>
        <tr>
          <td><%= @room.introduction %></td>
        </tr>
      </table>
    </div>

    <div>
      <%= form_with scope: :reserve, url: new_reserf_path, method: :get do |f| %>
        <table>
          <tr>
            <td>
              ¥<%= @room.rent %> / 日
            </td>
          </tr>
          <tr>
            <td>
              <p>開始日</p>
              <%= f.date_field :start_day %>
            </td>
          </tr>
          <tr>
            <td>
              <p>終了日</p>
              <%= f.date_field :end_day %>
            </td>
          </tr>
          <tr>
            <td>
              <p>人数</p>
              <%= f.text_field :num_people %>
            </td>
          </tr>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <%= f.hidden_field :room_id, value: @room.id %>
          <tr>
            <td><div class="reseved"><%= f.submit "予約する", class: 'submit_btn' %></div></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>
