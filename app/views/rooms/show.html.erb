<h2>ルーム詳細</h2>

<div class="room_reserve_container">
  <table>
    <tr>
      <td><%= @room.image %></td>
    </tr>
    <tr>
      <td><%= @room.name %></td>
    </tr>
    <tr>
      <td><%= @room.adress %></td>
    </tr>
    <tr>
      <td><%= @room.introduction %></td>
    </tr>
  </table>

  <%= form_with model:@reserve do |f| %>
    <table>
      <tr>
        <td>
          <%= @room.rent %> / 日
        </td>
      </tr>
      <tr>
        <td>
          <p>開始日</p>
          <%= f.date_field :start_day %>
        </td>
      </tr>
      <tr>
        <td>
          <p>終了日</p>
          <%= f.date_field :end_day %>
        </td>
      </tr>
      <tr>
        <td>
          <p>人数</p>
          <%= f.text_field :num_people %>
        </td>
      </tr>
      <tr>
        <td><div class="reseved"><%= f.submit "予約する" %></div></td>
      </tr>
    </table>
      <%= f.hidden_field :user_id, value: @user.id %>
  <% end %>
</div>

<p><%= link_to "Topページへ", :mains %></p>
