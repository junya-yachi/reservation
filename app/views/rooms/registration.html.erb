<h1>登録ルーム一覧 : <%= @rooms.count %>件</h1>

<table>
  <thead>
    <tr>
      <th>ルーム画像</th>
      <th>ルーム名</th>
      <th>ルーム紹介</th>
      <th>料金</th>
      <th>作成日</th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td>            
          <% if room.image? %>
            <%= image_tag room.image.to_s, size: '240x160' %>
          <% else %>
            <%= image_tag("room01.jpg", size: '240x160') %>
          <% end %>
        </td>
        <td><%= link_to "#{room.name}", room %></td>
        <td><%= room.introduction %></td>
        <td>¥<%= room.rent %></td>
        <td><%= room.created_at.to_s(:datetime_jp) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


